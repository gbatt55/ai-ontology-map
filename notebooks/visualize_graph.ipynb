# ============================================================
# 1. INSTALL + IMPORTS
# ============================================================

!pip install networkx

import json, urllib.request, os, numpy as np
import networkx as nx
import matplotlib.pyplot as plt
import matplotlib.patches as mpatches
import matplotlib.lines as mlines

# Colormap for layers
cmap = plt.cm.get_cmap('tab10')

print("Imports ready.")
# ============================================================
# 2. DOWNLOAD ontology.json FROM GITHUB
# ============================================================

RAW_URL = "https://raw.githubusercontent.com/gbatt55/ai_ontology-map/main/ontology.json"

local_file = "/content/ontology.json"
urllib.request.urlretrieve(https://github.com/gbatt55/ai-ontology-map, local_file)

print(f"Downloaded ontology.json to {local_file}")

with open(local_file, "r") as f:
    data = json.load(f)

nodes = data.get("nodes", [])
edges = data.get("edges", [])

print(f"Loaded {len(nodes)} nodes and {len(edges)} edges.")
# ============================================================
# 3. SELECT LAYERS (choose subset or leave empty for ALL)
# ============================================================

# Example: only visualize Layer 2 (your compute fabric)
selected_layers = [2]

# Example: visualize everything:
# selected_layers = []

print("Selected layers:", selected_layers)
# ============================================================
# 4. BUILD NETWORKX GRAPH
# ============================================================

G = nx.DiGraph()

# Add nodes
for n in nodes:
    G.add_node(n["id"], **n)

# Add edges
for e in edges:
    G.add_edge(e["source"], e["target"], **e)

print("Graph built:", G.number_of_nodes(), "nodes,", G.number_of_edges(), "edges.")
# ============================================================
# 5. UPGRADED VISUALIZER — FULL VERSION
# ============================================================

# Node shapes by type
NODE_SHAPES = {
    "company": "o",
    "technology": "s",
    "platform": "D",
    "institution": "^",
    "concept": "v",
    "infrastructure": "P",
    "dataset": "h",
    "supply-chain": "8"
}

# Edge colors by type
EDGE_COLORS = {
    "dependency": "blue",
    "leverage": "purple",
    "competition": "red",
    "coupling": "orange"
}

def edge_width(weight):
    return 1 + 4 * weight  # 0.1 → thin, 1.0 → thick


# ========== FILTER GRAPH BY LAYER ==========
if selected_layers:
    H = nx.DiGraph()
    for n, d in G.nodes(data=True):
        if d.get("layer") in selected_layers:
            H.add_node(n, **d)
    for u, v, d in G.edges(data=True):
        if u in H.nodes and v in H.nodes:
            H.add_edge(u, v, **d)
else:
    H = G.copy()

if H.number_of_nodes() == 0:
    print("No nodes to display for selected layers:", selected_layers)


# ========== LAYER-AWARE LAYOUT ==========
layer_positions = {}
y_scaling = 1.5

for n, d in H.nodes(data=True):
    layer = d.get("layer", 4)
    layer_positions[n] = (
        layer + 0.2 * np.random.randn(),
        -layer * y_scaling + 0.1 * np.random.randn()
    )

pos = nx.spring_layout(H, pos=layer_positions, seed=42, k=1.0)


# ========== DRAW GRAPH ==========
plt.figure(figsize=(15, 11))

# Draw nodes by type
for node_type, shape in NODE_SHAPES.items():
    matching_nodes = [n for n, d in H.nodes(data=True) if d.get("type") == node_type]
    if matching_nodes:
        nx.draw_networkx_nodes(
            H, pos,
            nodelist=matching_nodes,
            node_color=[cmap((H.nodes[n]["layer"] - 1) % 10) for n in matching_nodes],
            node_shape=shape,
            node_size=1100,
            alpha=0.92
        )

# Draw edges
for (u, v, d) in H.edges(data=True):
    etype = d.get("type", "dependency")
    weight = d.get("weight", 0.4)

    nx.draw_networkx_edges(
        H, pos,
        edgelist=[(u, v)],
        arrowstyle="-|>",
        arrowsize=16,
        width=edge_width(weight),
        edge_color=EDGE_COLORS.get(etype, "gray"),
        alpha=0.85
    )

# Labels
nx.draw_networkx_labels(
    H, pos,
    labels={n: H.nodes[n]["name"] for n in H.nodes},
    font_size=9
)

plt.title(
    f"AI Supply Chain Ontology — Layers {selected_layers if selected_layers else 'ALL'}",
    fontsize=14
)
plt.axis("off")


# ========== LEGENDS ==========
# Layer legend
layer_patches = [
    mpatches.Patch(color=cmap(i), label=f"Layer {i+1}")
    for i in range(7)
]

# Node type legend
node_handles = [
    mlines.Line2D([], [], color="black", marker=shape, linestyle="None",
                  markersize=10, label=typ)
    for typ, shape in NODE_SHAPES.items()
]

# Edge type legend
edge_handles = [
    mlines.Line2D([], [], color=color, linewidth=3, label=etype)
    for etype, color in EDGE_COLORS.items()
]

plt.legend(
    handles=layer_patches + node_handles + edge_handles,
    loc="upper left",
    bbox_to_anchor=(1.05, 1.0),
    fontsize=9
)

plt.tight_layout()
plt.show()

print("Layers present in visualization:", sorted({d.get("layer") for _, d in H.nodes(data=True)}))
