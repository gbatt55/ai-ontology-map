# ---------------------------
# Load ontology.json from GitHub
# ---------------------------

RAW_URL = "https://raw.githubusercontent.com/gbatt55/ai-ontology-map/main/ontology.json"

local_file = "ontology.json"

# download the file
import urllib.request
urllib.request.urlretrieve(RAW_URL, local_file)

# load the JSON
import json
with open(local_file, "r") as f:
    data = json.load(f)

nodes = data["nodes"]
edges = data["edges"]

print("Loaded", len(nodes), "nodes and", len(edges), "edges.")
